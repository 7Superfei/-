@model List<OutstandingEmployeeViewModel>
@{
    ViewData["Title"] = ViewBag.CategoryTitle;
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>@ViewBag.CategoryTitle 一览</h4>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>工号</th>
                                <th>姓名</th>
                                <th>部门</th>
                                <th>职级</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@(employee.EmployeeId.ToString("D6"))</td>
                                    <td>@employee.Name</td>
                                    <td>@employee.Department</td>
                                    <td>@employee.PositionLevel</td>
                                    <td>
                                        <a asp-controller="Profile" asp-action="Employee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-primary">查看画像</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    暂无@ViewBag.CategoryTitle数据
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Profile" asp-action="Collective" class="btn btn-secondary">返回集体画像</a>
        </div>
    </div>
</div> 