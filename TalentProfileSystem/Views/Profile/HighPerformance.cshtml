@model List<EmployeeProfileViewModel>
@{
    ViewData["Title"] = "高绩效人才池";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">高绩效人才池</h5>
            </div>
            <div class="card-body">
                <p>按综合能力评分排序</p>
                
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>排名</th>
                                <th>工号</th>
                                <th>姓名</th>
                                <th>部门</th>
                                <th>职级</th>
                                <th>综合能力评分</th>
                                <th>晋升推荐度</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var profile = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@profile.WorkId</td>
                                    <td>@profile.Name</td>
                                    <td>@profile.Department</td>
                                    <td>@profile.PositionLevel</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: @(profile.OverallScore)%;" aria-valuenow="@profile.OverallScore" aria-valuemin="0" aria-valuemax="100">@profile.OverallScore.ToString("F1")</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: @(profile.PromotionRecommendationScore)%;" aria-valuenow="@profile.PromotionRecommendationScore" aria-valuemin="0" aria-valuemax="100">@profile.PromotionRecommendationScore.ToString("F1")</div>
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-controller="Profile" asp-action="Employee" asp-route-id="@profile.EmployeeId" class="btn btn-sm btn-primary">查看画像</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 